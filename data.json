{
  "chatbot_flow": {
    "initial_questions": [
      {
        "id": "name",
        "question": "What's your Name?",
        "type": "text",
        "required": true,
        "next": "contact"
      },
      {
        "id": "contact",
        "question": "Please share your mob & email",
        "type": "contact",
        "required": true,
        "next": "gender"
      },
      {
        "id": "gender",
        "question": "Lovely to meet you, What's your gender?",
        "type": "single_choice",
        "options": ["Male", "Female", "Other"],
        "required": true,
        "next": "age"
      },
      {
        "id": "age",
        "question": "And if you could help me with your age?",
        "type": "number",
        "required": true,
        "next": "hair_concern"
      },
      {
        "id": "hair_concern",
        "question": "What's your major hair concern?",
        "type": "single_choice",
        "options": [
          "Hairfall",
          "Dandruff",
          "Lice",
          "Split ends/Damaged or Dull Hair",
          "Premature Greying"
        ],
        "required": true,
        "next": "diagnose_concern"
      }
    ],

    "concern_flows": {
      "Hairfall": {
        "initial_step": {
          "type": "image_selection",
          "message": "Please identify your hairfall stage from the following images",
          "options": "7_stages_hairfall_images",
          "next_step": "recommend_hairfall_treatment"
        },
        "treatments": {
          "Stage 1": {
            "products": ["Black Tab Men/Women", "Neem Comb"]
          },
          "Stage 2": {
            "products": ["Black Tab Men/Women", "Neem Comb"]
          },
          "Stage 3": {
            "products": [
              "Black Tab Men/Women",
              "Antihairfall Shampoo",
              "Neem Comb"
            ]
          },
          "Stage 4-7": {
            "products": [
              "Black Tab Men/Women",
              "Anti hairfall Shampoo",
              "Infinity Hair Oil",
              "Neem Comb"
            ]
          }
        }
      },

      "Dandruff": {
        "initial_step": {
          "type": "single_choice",
          "message": "What type of dandruff do you have?",
          "options": ["Mild", "Heavy", "Seborrheic Dermatitis"],
          "next_step": "recommend_dandruff_treatment"
        },
        "treatments": {
          "Mild": {
            "products": ["Anti Dandruff Shampoo", "Neem Comb"]
          },
          "Heavy": {
            "products": ["Anti Dandruff Shampoo", "Neem Comb", "Infinity Oil"]
          },
          "Seborrheic Dermatitis": {
            "products": ["Anti Dandruff Shampoo", "K2CT soap", "Neem Comb"]
          }
        }
      },

      "Lice": {
        "treatments": {
          "products": ["Antilice", "Lice Comb", "Terminator Comb"]
        }
      },

      "Split ends/Damaged or Dull Hair": {
        "initial_step": {
          "type": "single_choice",
          "message": "Please select your specific condition:",
          "options": [
            "Split Ends with Stage 3-7 & Mild Dandruff",
            "Split Ends with Heavy Dandruff & Stage 3-7",
            "Damaged/Dull Hair with Seborrhic Dermatitis"
          ],
          "next_step": "recommend_damage_treatment"
        },
        "treatments": {
          "Split Ends with Stage 3-7 & Mild Dandruff": {
            "products": [
              "Black tab Men/Women",
              "Anti Dandruff Shampoo",
              "Neem Comb",
              "Anti Hairfall Shampoo"
            ]
          },
          "Split Ends with Heavy Dandruff & Stage 3-7": {
            "products": [
              "Black tab Men/Women",
              "Anti Dandruff Shampoo",
              "Neem Comb",
              "Anti Hairfall Shampoo"
            ]
          },
          "Damaged/Dull Hair with Seborrhic Dermatitis": {
            "products": [
              "Black tab Men/Women",
              "Anti Dandruff Shampoo",
              "K2CT Soap",
              "Infinity Oil"
            ]
          }
        }
      },

      "Premature Greying": {
        "initial_step": {
          "type": "single_choice",
          "message": "Do you have any additional concerns with premature greying?",
          "options": [
            "Hairfall & Premature Greying",
            "Dandruff & Premature Greying",
            "Damaged/Dull Hair & Premature Greying"
          ],
          "next_step": "check_additional_conditions"
        },
        "sub_flows": {
          "Hairfall & Premature Greying": {
            "message": "Is your hairfall in Stage 3-7?",
            "type": "boolean",
            "if_true": {
              "products": ["Black Tab Men/Women", "Infinity Hair Oil"]
            }
          },
          "Dandruff & Premature Greying": {
            "message": "What type of dandruff do you have?",
            "type": "single_choice",
            "options": [
              "Mild & Premature greying",
              "Heavy & Premature Greying",
              "Seborrhic Dermatitis & premature Greying"
            ],
            "treatments": {
              "Mild & Premature greying": {
                "products": ["Anti Dandruff Shampoo", "Infinity Hairoil"]
              },
              "Heavy & Premature Greying": {
                "products": [
                  "Anti Dandruff Shampoo",
                  "Neem Comb",
                  "Infinity Hair Oil"
                ]
              },
              "Seborrhic Dermatitis & premature Greying": {
                "products": [
                  "Anti Dandruff Shampoo",
                  "K2CT Soap",
                  "Neem Comb",
                  "Infinity Hair Oil"
                ]
              }
            }
          },
          "Damaged/Dull Hair & Premature Greying": {
            "products": [
              "Anti Hair fall Shampoo",
              "Infinity hair Oil",
              "Neem Comb"
            ]
          }
        }
      }
    },

    "final_step": {
      "type": "recommendation",
      "message": "Based on your condition, here are the recommended products:",
      "show_products": true,
      "ask_feedback": true
    }
  }
}
